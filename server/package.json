{
  "name": "webperritos-server",
  "version": "1.0.0",
  "description": "Backend API for pet registration system",
  "main": "index.js",
  "scripts": {
    "dev": "nodemon index.js",
    "start": "node index.js",
    "generate-jwt": "node scripts/generate-jwt-secret.js",
    "security-check": "echo '\n🔒 Verificando configuración de seguridad...' && node -e \"require('dotenv').config(); if (!process.env.JWT_SECRET || process.env.JWT_SECRET.length < 32) { console.error('❌ JWT_SECRET no configurado o inseguro'); process.exit(1); } else { console.log('✅ JWT_SECRET configurado correctamente'); }\"",
    "setup": "npm install && npm run generate-jwt",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:smoke": "jest smoke.test.js",
    "cleanup": "node scripts/cleanup-orphaned-files.js",
    "cleanup:dry-run": "node scripts/cleanup-orphaned-files.js --dry-run",
    "cleanup:old": "node scripts/cleanup-orphaned-files.js --older-than-days=30",
    "organize": "node scripts/organize-codebase.js",
    "remove-debug-logs": "node scripts/remove-debug-logs.js --dry-run",
    "logs:view": "tail -f logs/combined.log",
    "logs:errors": "tail -f logs/error.log"
  },
  "dependencies": {
    "bcrypt": "^6.0.0",
    "bcryptjs": "^3.0.2",
    "cors": "^2.8.5",
    "dotenv": "^17.2.2",
    "express": "^4.18.2",
    "express-rate-limit": "^8.1.0",
    "express-session": "^1.18.2",
    "helmet": "^8.1.0",
    "joi": "^18.0.1",
    "jsonwebtoken": "^9.0.2",
    "multer": "^1.4.5-lts.1",
    "mysql2": "^3.15.0",
    "node-cron": "^3.0.3",
    "qrcode": "^1.5.4",
    "sqlite3": "^5.1.6",
    "uuid": "^9.0.0",
    "winston": "^3.18.3"
  },
  "devDependencies": {
    "@types/jest": "^29.5.5",
    "jest": "^29.7.0",
    "nodemon": "^3.0.1",
    "supertest": "^6.3.3"
  }
}
